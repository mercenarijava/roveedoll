<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme without action bar. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextSmall" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/default_text_small</item>
    </style>

    <style name="TextSmall.White">
        <item name="android:textColor">@color/default_white</item>
    </style>

    <style name="TextSubtitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/default_text_subtitle</item>
    </style>

    <style name="TextSubtitle.White">
        <item name="android:textColor">@color/default_white</item>
    </style>



</resources>
